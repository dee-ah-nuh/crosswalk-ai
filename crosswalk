#!/bin/bash
# Crosswalk ETL Helper - Simple run script

case "${1:-run}" in
    "run")
        echo "ðŸš€ Starting Crosswalk ETL Helper..."
        exec python deploy.py
        ;;
    "dev")
        echo "ðŸ”§ Starting development mode..."
        exec python main.py
        ;;
    "build")
        echo "ðŸ”¨ Building frontend..."
        cd frontend && npm run build
        ;;
    "help"|"-h"|"--help")
        echo "Crosswalk ETL Helper Commands:"
        echo "  crosswalk run     - Start production server (default)"
        echo "  crosswalk dev     - Start development mode"
        echo "  crosswalk build   - Build frontend only"
        echo "  crosswalk help    - Show this help"
        ;;
    *)
        echo "Unknown command: $1"
        echo "Run 'crosswalk help' for available commands"
        exit 1
        ;;
esac